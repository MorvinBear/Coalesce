{
  "steps": [
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-/tmp/converge/target} && echo $CARGO_TARGET_DIR",
      "arguments": []
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-/tmp/converge/target} && cargo",
      "arguments": [
        "build",
        "--release",
        "--target=wasm32-unknown-unknown",
        "--target-dir=$CARGO_TARGET_DIR"
      ]
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-/tmp/converge/target} && wasm-gc",
      "arguments": ["$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/data.wasm"]
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-/tmp/converge/target} && wasm-opt",
      "arguments": [
        "-Oz",
        "--vacuum",
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/data.wasm"
      ]
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-/tmp/converge/target} && wasm2wat",
      "arguments": [
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/data.wasm",
        "-o",
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/data.wat"
      ]
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-/tmp/converge/target} && wat2wasm",
      "arguments": [
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/data.wat",
        "-o",
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/data.wasm"
      ]
    }
  ],
  "artifact": "${CARGO_TARGET_DIR:-/tmp/converge/target}/wasm32-unknown-unknown/release/data.wasm"
}
